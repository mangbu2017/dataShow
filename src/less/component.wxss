@keyframes move {
  from {
    transform: rotate(0deg);
  }
  20% {
    transform: rotateZ(5deg);
  }
  40% {
    transform: rotateZ(-5deg);
  }
  60% {
    transform: rotateZ(10deg);
  }
  80% {
    transform: rotateZ(-10deg);
  }
  to {
    transform: rotateZ(0deg);
  }
}
.component {
  background-size: 100%;
  background-repeat: no-repeat;
  background-color: transparent;
}
.component.shake {
  animation: move 2s infinite 1s;
}
